{
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    "lib": ["ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "common/*": ["./common/src/*"]
    }
  },
  "include": [
    "./alpha-spawn_and_swamp/src",
    "./alpha-capture_the_flag/src",
    "./alpha-collect_and_control/src",
    "./common/src"
  ]
}
